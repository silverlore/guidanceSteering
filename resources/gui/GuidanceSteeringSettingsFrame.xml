<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI name="guidanceSteeringSettings">
    <GuiElement type="empty" profile="uiInGameMenuFrame">
        <!-- Static page header -->
        <GuiElement type="empty" profile="ingameMenuFrameHeaderPanel" position="130px -60px">
            <GuiElement type="bitmap" profile="ingameMenuGameSettingsHeaderIcon" position="0px 0px"/>
            <GuiElement type="text" profile="ingameMenuFrameHeaderText" position="80px 0px" text="$l10n_guidanceSteering_ui_settings"/>
        </GuiElement>

        <GuiElement type="bitmap" profile="ingameMenuSettingsBox" position="130px -124px" id="container">
            <GuiElement type="boxLayout" profile="ingameMenuSettingsLayout" position="50px -50px" id="boxLayout" size="1550px 560px">
                <!--Option to enable steering-->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" id="guidanceSteeringEnableSteeringElement"
                            toolTipElementId="settingsHelpBoxText" toolTipText="$l10n_guidanceSteering_tooltip_enableGuidanceSteering" >
                    <GuiElement type="button" profile="multiTextOptionLeft"/>
                    <GuiElement type="button" profile="multiTextOptionRight"/>
                    <GuiElement type="text" profile="multiTextOptionText"/>
                    <GuiElement type="text" profile="multiTextOptionTitle" text="$l10n_guidanceSteering_setting_enableGuidanceSteering"/>
                    <GuiElement type="bitmap" profile="multiTextOptionBg"/>
                </GuiElement>

                <!--Option show guide lines-->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" id="guidanceSteeringShowLinesElement"
                            toolTipElementId="settingsHelpBoxText" toolTipText="$l10n_guidanceSteering_tooltip_showLines">
                    <GuiElement type="button" profile="multiTextOptionLeft"/>
                    <GuiElement type="button" profile="multiTextOptionRight"/>
                    <GuiElement type="text" profile="multiTextOptionText"/>
                    <GuiElement type="text" profile="multiTextOptionTitle" text="$l10n_guidanceSteering_setting_showLines"/>
                    <GuiElement type="bitmap" profile="multiTextOptionBg"/>
                </GuiElement>

                <!--Option to snap to terrain angle-->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" id="guidanceSteeringSnapAngleElement"
                            toolTipElementId="settingsHelpBoxText" toolTipText="$l10n_guidanceSteering_tooltip_terrainAngleSnap">
                    <GuiElement type="button" profile="multiTextOptionLeft"/>
                    <GuiElement type="button" profile="multiTextOptionRight"/>
                    <GuiElement type="text" profile="multiTextOptionText"/>
                    <GuiElement type="text" profile="multiTextOptionTitle" text="$l10n_guidanceSteering_setting_terrainAngleSnap"/>
                    <GuiElement type="bitmap" profile="multiTextOptionBg"/>
                </GuiElement>

                <!--Option to auto invert offset-->
                <GuiElement type="checkedOption" profile="multiTextOptionSettings" id="guidanceSteeringAutoInvertOffsetElement" margin="30px 28px 30px 200px"
                            toolTipElementId="settingsHelpBoxText" toolTipText="$l10n_guidanceSteering_tooltip_autoInvertOffset">
                    <GuiElement type="button" profile="multiTextOptionLeft"/>
                    <GuiElement type="button" profile="multiTextOptionRight"/>
                    <GuiElement type="text" profile="multiTextOptionText"/>
                    <GuiElement type="text" profile="multiTextOptionTitle" text="$l10n_guidanceSteering_setting_autoInvertOffset"/>
                    <GuiElement type="bitmap" profile="multiTextOptionBg"/>
                </GuiElement>
            
                <GuiElement type="multiTextOption" profile="multiTextOptionSettings" id="guidanceSteeringWidthInCrementElement"
                            toolTipElementId="settingsHelpBoxText" toolTipText="$l10n_guidanceSteering_tooltip_widthInCrement" onClick="onClickChangeIncrement">
                    <GuiElement type="button" profile="multiTextOptionLeft"/>
                    <GuiElement type="button" profile="multiTextOptionRight"/>
                    <GuiElement type="text" profile="multiTextOptionText"/>
                    <GuiElement type="text" profile="multiTextOptionTitle" text="$l10n_guidanceSteering_setting_widthIncrement"/>
                    <GuiElement type="bitmap" profile="multiTextOptionBg"/>
                </GuiElement>

                <GuiElement type="numberUpDown" profile="multiTextOptionSettings" id="guidanceSteeringWidthElement" min="0" increment="1" max="10000"
                    toolTipElementId="settingsHelpBoxText" toolTipText="$l10n_guidanceSteering_tooltip_width" onClick="onClickWidthChange">
                    <GuiElement type="button" profile="multiTextOptionLeft"/>
                    <GuiElement type="button" profile="multiTextOptionRight"/>
                    <GuiElement type="text" profile="multiTextOptionText" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_guidanceSteering_setting_width"/>
                    <GuiElement type="bitmap" profile="multiTextOptionBg"/>
                </GuiElement>
              
                <GuiElement type="button" profile="guidanceButton" text="$l10n_guidanceSteering_setting_autoWidth" position="-210px 64px"
                            onClick="onClickAutoWidth"
                            id="guidanceSteeringWidthButton"/>

                <GuiElement type="numberUpDown" profile="multiTextOptionSettings" id="guidanceSteeringOffsetWidthElement" 
                            toolTipElementId="settingsHelpBoxText" toolTipText="$l10n_guidanceSteering_tooltip_offsetWidth" onClick="onClickChangeOffsetWidth">
                    <GuiElement type="button" profile="multiTextOptionLeft"/>
                    <GuiElement type="button" profile="multiTextOptionRight"/>
                    <GuiElement type="text" profile="multiTextOptionText" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_guidanceSteering_setting_offsetWidth"/>
                    <GuiElement type="bitmap" profile="multiTextOptionBg"/>
                </GuiElement>
              
                
                <GuiElement type="button" profile="guidanceButton" text="$l10n_guidanceSteering_setting_resetOffsetWidth" position="-210px 64px" margin="30px 28px 30px 100px"
                            onClick="onClickResetOffsetWidth"
                            id="guidanceSteeringResetOffsetWidthButton"/>
            
              <GuiElement type="multiTextOption" profile="multiTextOptionSettings" id="guidanceSteeringHeadlandModeElement"
                            toolTipElementId="settingsHelpBoxText" toolTipText="$l10n_guidanceSteering_tooltip_headlandMode">
                    <GuiElement type="button" profile="multiTextOptionLeft"/>
                    <GuiElement type="button" profile="multiTextOptionRight"/>
                    <GuiElement type="text" profile="multiTextOptionText"/>
                    <GuiElement type="text" profile="multiTextOptionTitle" text="$l10n_guidanceSteering_setting_headlandMode"/>
                    <GuiElement type="bitmap" profile="multiTextOptionBg"/>
                </GuiElement>

                <GuiElement type="numberUpDown" profile="multiTextOptionSettings" id="guidanceSteeringHeadlandDistanceElement" min="0" max="10000"
                            toolTipElementId="settingsHelpBoxText" toolTipText="$l10n_guidanceSteering_tooltip_headlandDistance">
                    <GuiElement type="button" profile="multiTextOptionLeft"/>
                    <GuiElement type="button" profile="multiTextOptionRight"/>
                    <GuiElement type="text" profile="multiTextOptionText"/>
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_guidanceSteering_setting_headlandDistance"/>
                    <GuiElement type="bitmap" profile="multiTextOptionBg"/> 
                </GuiElement>
            </GuiElement>
        </GuiElement>

        <!-- Tool tip display -->
        <GuiElement type="bitmap" profile="ingameMenuHelpRowBg" position="210px 64px" id="settingsHelpBox" visible="true">
            <GuiElement type="bitmap" profile="ingameMenuHelpRowIcon"/>
            <GuiElement type="text" profile="ingameMenuHelpRowText" id="settingsHelpBoxText" text="" onTextChanged="onToolTipBoxTextChanged"/>
        </GuiElement>
    </GuiElement>
</GUI>
